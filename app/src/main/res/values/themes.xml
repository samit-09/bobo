<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Bobo" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->

        <!-- Background color for the entire application -->
        <item name="backgroundColor">@color/white</item>

        <!-- Background color for items (such as list items) -->
        <item name="itemBackground">@color/grey</item>

        <!-- Text color for the application -->
        <item name="textColor">@color/black</item>
    </style>

    <!-- Custom style for the active indicator in Bottom Navigation View -->
    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <!-- Color for the active indicator -->
        <item name="android:color">@color/activeIndicator</item>
    </style>
</resources>
