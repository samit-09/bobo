<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColor"
    tools:context=".fragment.ChatFragment">

    <ImageView
        android:id="@+id/settings_icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginVertical="8dp"
        android:layout_marginHorizontal="8dp"
        android:padding="5dp"
        android:src="@drawable/settings"
        app:tint="?attr/textColor" />


    <!-- ImageView for displaying an image -->
    <ImageView
        android:id="@+id/tv_image"
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/welcome_cuate" />

    <!-- Ensure @drawable/welcome_cuate is defined in your resources -->

    <!-- TextView for displaying profile name -->
    <TextView
        android:id="@+id/profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/jost_bold"
        android:text="@string/welcome"
        android:textColor="?attr/textColor"
        android:textSize="24sp" />
    <!-- Ensure @string/welcome and @font/jost_bold are defined in your resources -->

    <!-- TextView for additional message -->
    <TextView
        android:id="@+id/tv_lets_have_fun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/jost_bold"
        android:letterSpacing="0.05"
        android:lineHeight="40sp"
        android:text="@string/let_s_have_fun_with_bobo"
        android:textAlignment="center"
        android:textColor="?attr/textColor"
        android:textSize="20sp" />
    <!-- Ensure @string/let_s_have_fun_with_bobo and @font/jost_bold are defined in your resources -->

    <!-- TextView for start conversation prompt -->
    <TextView
        android:id="@+id/tv_start_conversation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_lets_have_fun"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/jost_bold"
        android:letterSpacing="0.05"
        android:lineHeight="40sp"
        android:text="@string/start_a_conversation_with_bobo_right_now"
        android:textAlignment="center"
        android:textColor="?attr/textColor"
        android:textSize="14sp" />
    <!-- Ensure @string/start_a_conversation_with_bobo_right_now and @font/jost_bold are defined in your resources -->

    <!-- Button to get started with chat -->
    <Button
        android:id="@+id/getStartedButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="25dp"
        android:backgroundTint="@color/primaryColor"
        android:fontFamily="@font/jost_bold"
        android:onClick="onGetStartedButtonClick"
        android:text="@string/start_chat_with_bobo"
        android:textColor="@color/white"
        android:textSize="18sp" />
    <!-- Ensure @string/start_chat_with_bobo and @font/jost_bold are defined in your resources -->

</RelativeLayout>
