<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.FillProfileActivity">


    <!-- Top bar layout -->
    <RelativeLayout
        android:id="@+id/mainRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@color/white">

        <!-- Search icon -->
        <ImageView
            android:id="@+id/searchIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:onClick="onClick"
            android:paddingStart="10dp"
            android:src="@drawable/arrow_left_circle"
            tools:ignore="RtlSymmetry" />

        <!-- Fragment name text view -->
        <TextView
            android:id="@+id/fragmentNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fill Your Profile"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="@font/jost_bold"
            android:layout_centerVertical="true"
            android:layout_marginStart="50dp"
            />

    </RelativeLayout>


    <!-- Circle Image View for profile picture -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:src="@drawable/ic_launcher_foreground"
        app:civ_border_color="@color/grey"
        app:civ_border_width="1dp" />

    <!-- EditText for Name -->
    <EditText
        android:id="@+id/edit_text_name"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/profile_image"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/edit_text_background"
        android:fontFamily="@font/jost_bold"
        android:hint="Name"
        android:imeOptions="actionDone"
        android:inputType="textPersonName"
        android:letterSpacing="0.03"
        android:lineSpacingExtra="5dp"
        android:paddingStart="20dp"
        android:textColor="@color/black"
        android:textColorHint="#9D9A9A"
        android:textSize="15sp"
        tools:ignore="RtlSymmetry" />

    <!-- EditText for Email -->
    <EditText
        android:id="@+id/edit_text_email"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/edit_text_name"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/edit_text_background"
        android:fontFamily="@font/jost_bold"
        android:hint="Email"
        android:imeOptions="actionDone"
        android:inputType="textEmailAddress"
        android:letterSpacing="0.03"
        android:lineSpacingExtra="5dp"
        android:paddingStart="20dp"
        android:textColor="@color/black"
        android:textColorHint="#9D9A9A"
        android:textSize="15sp"
        tools:ignore="RtlSymmetry" />

    <!-- EditText for Phone Number -->
    <EditText
        android:id="@+id/edit_text_phone"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/edit_text_email"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/edit_text_background"
        android:fontFamily="@font/jost_bold"
        android:hint="Phone Number"
        android:imeOptions="actionDone"
        android:inputType="phone"
        android:letterSpacing="0.03"
        android:lineSpacingExtra="5dp"
        android:paddingStart="20dp"
        android:textColor="@color/black"
        android:textColorHint="#9D9A9A"
        android:textSize="15sp"
        tools:ignore="RtlSymmetry" />

    <!-- Continue Button -->
    <Button
        android:id="@+id/button_continue"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:fontFamily="@font/jost_bold"
        android:textSize="18sp"
        android:backgroundTint="@color/primaryColor"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:text="Continue" />

</RelativeLayout>
