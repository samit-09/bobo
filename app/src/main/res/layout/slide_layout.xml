<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColor"
    android:padding="8dp"
    android:orientation="vertical"
    android:gravity="center"
    >


    <!-- ImageView for the slide image -->
    <ImageView
        android:id="@+id/slide_image"
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/bot_amico" />

    <!-- TextView for the slide title -->
    <TextView
        android:id="@+id/slide_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/slide_image"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/jost_bold"
        android:letterSpacing="0.05"
        android:lineHeight="35dp"
        android:textAlignment="center"
        android:textColor="?attr/textColor"
        android:textSize="22sp" />


    <!-- Button for "Get Started" -->
    <Button
        android:id="@+id/getStartedButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="90dp"
        android:backgroundTint="@color/primaryColor"
        android:fontFamily="@font/jost_bold"
        android:onClick="onGetStartedButtonClick"
        android:text="@string/get_started"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:visibility="visible" />

</LinearLayout>
